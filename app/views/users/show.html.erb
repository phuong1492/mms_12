<% provide :title, @user.email %>
<div class="row">
  <div class="box">
    <div class="col-lg-12">
      <hr>
      <h2 class="intro-text text-center">
        <strong><%= t "user.info" %></strong>
      </h2>
      <hr>
      <div class="user_info">
        <div class = "col-md-5">
          <p><%= t("user.name") + @user.name %></p>
          <p><%= t("user.email") + @user.email %></p>
          <p><%= t("user.birthday") + @user.birthday.strftime("%F") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
