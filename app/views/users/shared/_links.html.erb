<%- if controller_name != "sessions" %>
  <%= link_to t("layout.log_in"), new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <%= link_to t("session.forgot_pw"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != "confirmations" %>
  <%= link_to ("session.receive_confirmation"), new_confirmation_path(resource_name) %><br />
<% end -%>