<%= form_for [:admin, @team] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>
  <%= f.label :leader_id, t("admin.team.add_leader") %>
  <%= f.collection_select :leader_id, @leaders, :id, :name %>
  <p>
    <%= f.label t("admin.team.choose_user") %>
    <div class="row show-user" >
      <%= f.collection_check_boxes :user_ids, @leaders, :id, :name do |b| %>
        <div class="col-ld-8 ">
          <%= b.check_box %>
          <%= b.object.name %>
        </div>       
      <% end %>
    </div>
  </p>
  <br />
  <p>
    <%= f.submit :submit, class: "btn btn-primary col-md-12" %>
  </p>
<% end %>
